.col-sm-10.col-sm-offset-1
  .login-container
    .center
      %h1
        %i.icon-plane.green
        %span.red DSA
        %span.grey .efb.is
    .space-6
    .position-relative
      = render 'layouts/messages'
      #signup-box.signup-box.visible.widget-box.no-border
        .widget-body
          .widget-main
            %h4.header.green.lighter.bigger
              %i.icon-group.blue
              New user registration
              .space-6
              %label.block.clearfix
              = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
                %label.block.clearfix
                  %span.block.input-icon.input-icon-right
                    = f.input_field :name, :class => 'form-control', :autofocus => true, :label => false
                    %i.icon-user
                %label.block.clearfix
                  %span.block.input-icon.input-icon-right
                    = f.input_field :email, :class => 'form-control', :required => true, :label => false
                    %i.icon-envelope
                %label.block.clearfix
                  %span.block.input-icon.input-icon-right
                    = f.input_field :password, :class => 'form-control', :required => true, :label => false
                    %i.icon-lock
                %label.block.clearfix
                  %span.block.input-icon.input-icon-right
                    = f.input_field :password_confirmation, :class => 'form-control', :required => true, :label => false
                    %i.icon-retweet
                .space-24
                .clearfix
                  %button.width-30.pull-left.btn.btn-sm{type: "reset"}
                    %i.icon-refresh
                    Reset
                  = button_tag(type: 'submit', class: "width-65 pull-right btn btn-sm btn-success") do
                    Register
                    %i.icon-arrow-right.icon-white
          .toolbar.center
            %a.back-to-login-link{href: new_session_path(resource_name)}
              %i.icon-arrow-left
              Back to login




