.col-sm-10.col-sm-offset-1
  .login-container
    .center
      %h1
        %i.icon-plane.green
        %span.red DSA
        %span.grey .efb.is
    .space-6
    .position-relative
      = render 'layouts/messages'
      #forgot-box.forgot-box.widget-box.no-border.visible
        .widget-body
          .widget-main
            %h4.header.red.lighter.bigger
              %i.icon-key
              Retrieve Password
            .space-6
            %p
              Enter your email and to receive instructions
            %form
              %fieldset
                %label.block.clearfix
                = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
                  = f.error_notification
                  %label.block.clearfix
                    %span.block.input-icon.input-icon-right
                      = f.input_field :email, :autofocus => :true, :class => 'form-control', :required => true, :label => false
                      %i.icon-envelope
                  .clearfix
                    = button_tag(type: 'submit', class: "width-35 pull-right btn btn-sm btn-danger") do
                      %i.icon-lightbulb
                      Send me!
          / /widget-main
          .toolbar.center
            %a.back-to-login-link{href: new_session_path(resource_name)}
              %i.icon-arrow-left
              Back to login
        / /widget-body            

